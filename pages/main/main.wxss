/* pages/main/main.wxss */

.history {
    margin-left: 25px;
    height: 70px;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.history image {
    width: 45px;
    height: 45px;
}

.history text {
    margin-left: 20px;
}

.greyLineX {
    width: 100%;
    height: 3px;
    background-color: #ededed;
}

.mainList {
    margin-top: 10px;
}

.podCastItem {
    margin-left: 20px;
    height: 116px;
    display: flex;
    flex-direction: row;
}

.podcastImg {
    width: 110px;
    height: 110px;
}


/* 播客图片 */

.img_item {
    width: 110px;
    height: 110px;
    border-radius: 5%;
}

.podcastTitleAndIntro {
    display: flex;
    flex-direction: column;
    margin-top: 6px;
    margin-left: 10px;
}


/* 播客名 */

.txt_item_name {
    margin-left: 20px;
    font-weight: bold;
}


/* 播客主播 */

.txt_item_author {
    margin-top: 12px;
    margin-left: 20px;
    font-size: 12px;
    color: #949393;
}


/* 播客简介 */

.txt_item_intro {
    margin-top: 12px;
    margin-left: 20px;
    margin-right: 5px;
    font-size: 12px;
    color: #949393;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.greyLine {
    width: 100%;
    height: 1px;
    background-color: #ededed;
}

.view_palying {
    position: fixed;
    width: 30px;
    height: 30px;
    bottom: 30px;
    right: 30px;
}

.img_playing {
    width: 30px;
    height: 30px;
}

.recommended {
    width: 100%;
    height: 80px;
    margin-top: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.txt_recommended {
    font-size: 10px;
    color: #949393;
}

.btn_recommended::after {
    border: none;
}

.btn_recommended {
    width: 250px;
    height: 30px;
    margin-top: 10px;
    color: white;
    background-color: #FEE419;
    font-size: 14px;
}