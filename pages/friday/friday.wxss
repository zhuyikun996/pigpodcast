/* pages/friday/friday.wxss */

.container {
    width: 100%;
    height: 100%;
    background: #FFE411;
    display: flex;
    flex-direction: column;
    position: fixed;
}

.question_and_answer {
    display: flex;
    flex-direction: column;
}

.txt_question {
    height: 60px;
    background: white;
    border-radius: 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
    /*垂直居中*/
    justify-content: center;
    /*水平居中*/
    color: #3C4141
}

.txt_answer {
    margin-top: 40px;
    font-size: 100px;
    color: #3C4141
}

.txt_do {
    margin-top: 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    /*垂直居中*/
    justify-content: center;
    /*水平居中*/
    color: #3C4141
}

.tips_view {
    position: fixed;
    bottom: 20px;
    left: 20px;
    right: 20px;
    display: flex;
    flex-direction: row;
}

.txt_tips {
    color: #3C4141;
    font-size: 12px;
}

.btnShare::after {
    border: none
}

.btnShare {
    background-color: #FFE411;
    color: #3C4141;
    font-size: 12px;
}