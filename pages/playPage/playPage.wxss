.picContainer {
    margin-top: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}


/* 播客图片 */

.picContainer image {
    width: 290px;
    height: 290px;
    border-radius: 10%;
}

.titles {
    margin-left: 30px;
    margin-right: 30px;
    margin-top: 15px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}


/* 标题 */

.episodeName {
    font-weight: bold;
    font-size: 20px;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}


/* 播客名字 */

.podCastName {
    font-size: 16px;
    color: grey;
}

.controlview {
    margin-left: 30px;
    margin-right: 30px;
    margin-top: 35px;
    height: 30px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}


/* 播放按钮 */

.btn_play {
    height: 55px;
    width: 55px;
}


/* 进度 */

.process {
    margin-top: 30px;
    height: 20px;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}


/* 当前播放秒数 */

.currentSecond {
    color: #cdf3d1;
    margin-right: 2px;
}

.fractionalLine {
    color: rgb(22, 141, 22)
}


/* 总时长 */

.totalSecond {
    color: #cae5cd;
    margin-left: 2px;
}


/* 首页和分享按钮区域 */

.bottomview {
    position: fixed;
    width: 100%;
    height: 50px;
    bottom: 20px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.btnContainer {
    height: 50px;
    width: 290px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}


/* 主页按钮 */

.btnHome::after {
    border: none;
}

.btnHome {
    flex: 1;
    background-color: #cdf3d1;
    color: white;
    border-radius: 0px;
}

.btnHomeClicked {
    background-color: #cae5cd;
}


/* 分享按钮 */

.btnShare::after {
    border: none;
}

.btnShare {
    flex: 1;
    background-color: #5ab5b2;
    color: white;
    border-radius: 0px;
}

.btnShareClicked {
    background-color: #439693;
}