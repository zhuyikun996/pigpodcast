/* pages/podCastList/podCastList.wxss */

.blurepicview {
    width: 100%;
    height: 160px;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.blurepicview image {
    margin-left: 20px;
    width: 100px;
    height: 100px;
    border-radius: 5%;
}

.podcastintroview {
    margin-left: 40px;
    display: flex;
    flex-direction: column;
}

.podcastintroName {
    color: white;
    font-size: 14px;
    font-weight: bold;
}

.podcastintroAuthor {
    color: white;
    font-size: 14px;
    margin-top: 10px;
}

.episodeItem {
    margin-left: 5px;
    height: 70px;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.img_item {
    width: 50px;
    height: 50px;
}

.img_item_history {
    width: 50px;
    height: 50px;
}

.img {
    width: 50px;
    height: 50px;
}

.img_history {
    width: 50px;
    height: 50px;
}

.txt_item {
    margin-right: 20px;
    margin-left: 20px;
    font-size: 18px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.greyLine {
    width: 100%;
    height: 1px;
    background-color: #ededed;
}


/* 清除按钮container */

.clear {
    position: fixed;
    width: 100%;
    height: 50px;
    bottom: 20px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.btnClear {
    height: 50px;
    width: 290px;
}

.btnClear::after {
    border: none;
}

.btnClear {
    background-color: #b7e7bc;
    color: white;
    border-radius: 0px;
}

.btnClearClicked {
    background-color: #99ce9e;
}